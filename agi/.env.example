# =============================================================================
# AGI-V2 Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# =============================================================================
# DATABASE PASSWORDS & SECRETS
# =============================================================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
NEO4J_PASSWORD=your_secure_neo4j_password_here
REDIS_PASSWORD=your_secure_redis_password_here
SECRET_KEY=your_super_secret_key_for_jwt_and_sessions

# =============================================================================
# EXTERNAL AI SERVICES API KEYS
# =============================================================================
# Anthropic Claude API Key (for LLM processing)
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-key-here

# Voyage AI API Key (for embeddings)
VOYAGE_API_KEY=pa-your-voyage-ai-key-here

# Cohere API Key (for reranking)
COHERE_API_KEY=your-cohere-api-key-here

# =============================================================================
# DEVELOPMENT ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_API_URL=http://localhost:8000
VITE_ENVIRONMENT=development
VITE_WS_URL=ws://localhost:8000/ws

# =============================================================================
# CLOUD PRODUCTION CONFIGURATION (for docker-compose.prod.yml)
# =============================================================================
# Uncomment and configure for production deployment

# Cloud Database URLs
# CLOUD_DATABASE_URL=postgresql://user:password@your-rds-endpoint:5432/agi_db
# CLOUD_NEO4J_URL=bolt+s://your-neo4j-aura-url:7687
# CLOUD_REDIS_URL=rediss://user:password@your-redis-cloud-url:6380

# Production Frontend Domain
# FRONTEND_DOMAIN=https://your-domain.com

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Log file paths (relative to backend directory)
LOG_FILE_PATH=logs/agi.log
ERROR_LOG_FILE_PATH=logs/error.log

# =============================================================================
# LANGCHAIN/LANGGRAPH CONFIGURATION
# =============================================================================
# LangGraph checkpoint storage
LANGGRAPH_CHECKPOINT_DB=postgresql://agi_user:${POSTGRES_PASSWORD}@localhost:5432/agi_db

# Memory levels configuration
MEMORY_L1_TTL=3600      # 1 hour in seconds
MEMORY_L2_TTL=86400     # 24 hours in seconds
MEMORY_L3_TTL=2592000   # 30 days in seconds

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Database connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Redis cache settings
REDIS_MAX_CONNECTIONS=50
REDIS_RETRY_ON_TIMEOUT=true

# Neo4j connection settings
NEO4J_MAX_CONNECTION_LIFETIME=3600
NEO4J_MAX_CONNECTION_POOL_SIZE=50

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT Token settings
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
JWT_REFRESH_EXPIRE_DAYS=7

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable/disable development features
DEBUG_MODE=true
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true

# Hot reload for development
RELOAD=true